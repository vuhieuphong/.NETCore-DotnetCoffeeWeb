@model CoffeeStore.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.orderTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.orderTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Customers.customerName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Customers.customerName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.OrderDetails)
        </dt>
        <dd>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Order Time
                        </th>
                        <th>
                            Item Name
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                           Quantity
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderDetails)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Orders.orderTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Items.itemName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.quantity)
                            </td>
                            <td>
                                <a asp-controller="OrderDetail" asp-action="Edit" asp-route-id="@item.orderDetailID">Edit</a> |
                                <a asp-controller="OrderDetail" asp-action="Details" asp-route-id="@item.orderDetailID">Details</a> |
                                <a asp-controller="OrderDetail" asp-action="Delete" asp-route-id="@item.orderDetailID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.orderID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
