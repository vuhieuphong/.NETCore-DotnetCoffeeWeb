@model CoffeeStore.Models.ItemCategory

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>ItemCategory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <input asp-for="itemcategoryID" class="form-control" type="hidden" />
                <span asp-validation-for="itemcategoryID" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="itemcategoryName" class="control-label"></label>
                <input asp-for="itemcategoryName" class="form-control" />
                <span asp-validation-for="itemcategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@(Model.itemcategoryID==0 ? "Create":"Edit")" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

